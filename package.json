  "dependencies": {
    "babel-runtime": "^6.3.19",
    "classnames": "^2.1.2",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.6",
    "react-router": "^2.0.0-rc5",
    "react-router-redux": "^2.1.0",
    "redux": "^3.0.2",
    "redux-actions": "^0.9.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "browser": true
