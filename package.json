{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "A boilerplate of things that shouldn't exist",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./client/**/*",
    "build": "rimraf ./static && cross-env NODE_ENV=production node scripts/build",
    "dev": "node scripts/devServer",
    "deploy": "npm run build && surge -p ./static -d rb.surge.sh"
